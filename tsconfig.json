{
  "compilerOptions": {
    "target": "ES6", // Cambiado de "esnext" a "ES6"
    "module": "ESNext",
    "jsx": "react", // Configura el soporte para JSX
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"], // Conservado de la configuraci칩n original
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./src", // Conservado de la configuraci칩n original
    "paths": {
      "*": ["*"] // Conservado de la configuraci칩n original
    }
  },
  "include": ["src/**/*"], // Actualizado para incluir todos los archivos en "src"
  "exclude": ["node_modules"] // A침adido para excluir "node_modules"
}